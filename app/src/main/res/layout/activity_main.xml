<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:text="developer:Yohan Permana"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon1" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TourFuel"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:padding="5dp"
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi perjalanan yang membantu mencari objek wisata terdekat dan menghitung bahan bakar"
        android:textColor="#666666"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"/>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btnImplicit"
        android:background="@drawable/rounded_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CARI WISATA TERDEKAT "
        android:textColor="#ffffff"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnExplicit"
        android:background="@drawable/rounded_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HITUNG COST TRANSPORTASI "
        android:layout_marginTop="27dp"
        android:textColor="#ffffff"
        android:textSize="16sp"/>
</LinearLayout>
